<web-app>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:context-servlet.xml</param-value>
	</context-param>
	
	<filter>
		<filter-name>corsFilter</filter-name>
		<filter-class>filter.CORSFilter</filter-class>
	</filter>
	
